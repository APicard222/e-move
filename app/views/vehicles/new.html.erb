<div class="exterior_container">
  <div class="sign-form">
  <h3>Want to rent your favorite vehicle?</h3>
  <%= simple_form_for @vehicle do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :address %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Create Vehicle", class: "sign-btn" %>
  <% end %>
  <div class="links">
    <%= link_to('Back', vehicles_path) %>
  </div>
  </div>
</div>
