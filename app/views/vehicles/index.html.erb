<div class="container">
   <h2>Find and rent your dream vehicle</h2>
    <div class="index-button">
      <%= link_to('Add', new_vehicle_path) %>
    </div>
  <div class="row mt-3">
    <div class="col-6">
      <% @vehicles.each do |vehicle| %>
        <div class="card-trip">
          <%= cl_image_tag vehicle.photo.key, height: 300, width: 400, crop: :fill %>
          <div class="card-trip-infos">
            <div>
              <h2><%= link_to(vehicle.title, vehicle_path(vehicle)) %></h2>
              <p><%= vehicle.description%></p>
            </div>
            <h2 class="card-trip-pricing"><%= vehicle.price %> CHF</h2>
            <% if user.photo.attached? %>
              <%= cl_image_tag user.photo.key, class: "card-trip-user avatar-bordered" %>
            <% else %>
              <img src="https://picsum.photos/200/200" class="card-trip-user avatar-bordered" />
            <% end %>
          </div>
         </div>
        <% end %>
       </div>

       <div class="col-6">
        <div id="map"
          style="width: 100%; height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
         </div>
        </div>
       </div>
</div>
